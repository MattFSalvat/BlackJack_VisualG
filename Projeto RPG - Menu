Algoritmo "Projeto RPG - Menu"
var
   enemie:vetor [1..5] de inteiro
   menu, hp, nehp, acne, D20:inteiro
   f:caractere
Inicio
hp <- 100
nehp <- 100
   enquanto hp<>0 faca
   escreval("1- Iniciar")
   escreval("2- Sair")
   leia(menu)
   se(menu=1)entao
      limpatela
      enquanto hp<>0 faca
         escreval("Sua saúde: ",hp, ". Saúde do inimigo: ",nehp)
         escreval("1- Atacar")
         escreval("2- Defender")
         escreval("3- Fugir")
         leia(menu)
         se(menu=1)entao
            limpatela
            D20 <- randi(20)
            nehp <- nehp - D20
            escreval("Seu D20: ",D20)
            acne <- randi(3)
            se()entao
            fimse
            se()entao
            fimse
            se()entao
            fimse
            escreva("Aperte ENTER para prosseguir.")
            leia(f)
            limpatela
         fimse
         se(menu=2)entao
            limpatela
            D20 <- randi(20)
            escreval("D20: ",D20)
            escreva("Aperte ENTER para prosseguir.")
            leia(f)
            limpatela
         fimse
         se(menu=3)entao
            limpatela
            D20 <- randi(20)
            escreval("D20: ",D20)
            escreva("Aperte ENTER para prosseguir.")
            leia(f)
            limpatela
         fimse
      fimenquanto
   fimse
   se(menu=2)entao
      limpatela
      escreva("Encerrando...")
      interrompa
   fimse
   fimenquanto
Fimalgoritmo
